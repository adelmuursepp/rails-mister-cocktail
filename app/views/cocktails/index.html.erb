<div class="container-cocktail-card d-flex m-5 justify-content-around">
  <% @cocktails.each do |cocktail| %>
    <div class="cocktail-card card ">
      <div class="card-body">
        <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-title" %>
      </div>
    </div>
  <% end %>
</div>
<%= link_to "Create new cocktail", new_cocktail_path, class: 'btn btn-primary m-5' %>

